: 'Copyright (C) 2019 CÃ³digo Cristo'
#!/bin/bash

# @Bourne_Again
# wget is.gd/arcris && sh arcris
# https://is.gd/stats.php?url=arcris

clear

pacman -Sy
clear

pacmaninit=$( pacman -S glibc dialog curl --noconfirm --needed | wc -l )

if [[ "$pacmaninit" = "1" ]] ; then
clear
else
clear
sudo pacman -Sy glibc dialog curl --noconfirm --needed
fi

clear
curl -LJO github.com/CodigoCristo/arcrisnew/archive/refs/heads/main.tar.gz
tar  -xvf  arcrisnew-main.tar.gz
cd arcrisnew-main

cp .dialogrc /root
chmod +x *
sleep 2
clear
sh arcris-install