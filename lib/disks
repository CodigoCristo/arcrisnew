#!/bin/bash

disksystem () {

cmd=(dialog --no-collapse --cr-wrap --backtitle "${title}" --title "-| Discos |-" \
--ok-label "Confirmar" --menu "\nEliga su mejor opci칩n para su Sistema\n " 15 60 15)
options=(1 " Particionado Autom치tico                       "   
         2 " Particionado Autom치tico con Cifrado de Disco  "
         3 " Particionado Manual                           "
         4 " Particionado con otro Sistema Operativo       "
         5 " Cambia o Crea tu Tabla de partici칩n del Disco "
         6 " Formatea todo tu Disco con DD                 ")

choices=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty)
clear
for choice in $choices
do
    case $choice in
    ################

1) ################ 
source lib/partition/autopartition
autopartition
;;

2) ################
source lib/partition/encryptpartition
encryptpartition
;;
3) ################
source lib/partition/manualpartition
manualpartition
;;

4) ################
shell="dash"
;;


5) ################
source lib/partition/tabledisk
tabledisk
;;


6) ################
source lib/partition/deletediskdd
deletediskdd
;;

    esac
done



}


