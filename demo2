--menu "${text_menu}" ${highmenu} ${widthmenu} 10 \
1 "${menu1} ${submenu1}" \
2 "${menu2} ${submenu2}" \
3 "${menu3} ${submenu3}" \
4 "${menu4} ${submenu4}" \
5 "${menu5} ${submenu5}" \
